%section.archive
  %header
    %h1
      = get_page_title()
       
  %section
    - while(have_posts())
      - the_post()
      
      -# Se Ã¨ una pagina di ricerca
      -if (is_search())
        %article.risultato_search
          %header
            %h3
              = link_to(get_the_title(), get_permalink()) 
            - the_excerpt()
      - else  
        = render_partial("_post_preview")
        
    .next_prev  
      .next
        - previous_posts_link('successivi')
      .prev
        - next_posts_link('precedenti')
      
